<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context="it.techies.pranayama.activities.LauncherActivity"
	tools:showIn="@layout/activity_launcher">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="fitXY"
		android:src="@drawable/background"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin">

		<LinearLayout
			android:layout_marginTop="24dp"
			android:id="@+id/setup_schedule_ll"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:orientation="vertical"
			android:padding="16dp">

			<com.mikepenz.iconics.view.IconicsImageView
				android:layout_width="48dp"
				android:layout_height="48dp"
				app:iiv_color="@android:color/white"
				app:iiv_icon="gmd-schedule"/>

			<TextView
				android:layout_marginTop="16dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Let's setup schedule"
				android:textAppearance="@style/TextAppearance.AppCompat.Title"
				android:textColor="@color/textColorSubHead"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/aasans_ll"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="gone">

			<GridLayout
				android:id="@+id/gridLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="8dp">

				<TextView
					android:id="@+id/textView1"
					android:layout_width="@dimen/top_row_i_w"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="8dp"
					android:layout_row="0"
					android:drawablePadding="4dp"
					android:drawableTop="@drawable/ic_aasan_deactive_48dp"
					android:gravity="center"
					android:text="@string/aasan_bhastrika"
					android:textColor="@color/textColorSubHead"/>

				<TextView
					android:id="@+id/textView2"
					android:layout_width="@dimen/top_row_i_w"
					android:layout_height="wrap_content"
					android:layout_column="1"
					android:layout_margin="8dp"
					android:layout_row="0"
					android:drawablePadding="4dp"
					android:drawableTop="@drawable/ic_aasan_deactive_48dp"
					android:gravity="center"
					android:text="@string/aasan_kapal_bhati"
					android:textColor="@color/textColorSubHead"/>

				<TextView
					android:id="@+id/textView3"
					android:layout_width="@dimen/top_row_i_w"
					android:layout_height="wrap_content"
					android:layout_column="2"
					android:layout_margin="8dp"
					android:layout_row="0"
					android:drawablePadding="4dp"
					android:drawableTop="@drawable/ic_aasan_deactive_48dp"
					android:gravity="center"
					android:text="@string/aasan_bahaya"
					android:textColor="@color/textColorSubHead"/>

				<TextView
					android:id="@+id/textView4"
					android:layout_width="@dimen/top_row_i_w"
					android:layout_height="wrap_content"
					android:layout_column="3"
					android:layout_margin="8dp"
					android:layout_row="0"
					android:drawablePadding="4dp"
					android:drawableTop="@drawable/ic_aasan_deactive_48dp"
					android:gravity="center"
					android:text="@string/aasan_agnisar_kriya"
					android:textColor="@color/textColorSubHead"/>
			</GridLayout>

			<GridLayout
				android:id="@+id/gridLayout2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/gridLayout"
				android:layout_centerHorizontal="true" android:layout_marginTop="8dp">

				<TextView
					android:id="@+id/textView5"
					android:layout_width="@dimen/bottom_row_i_w"
					android:layout_height="wrap_content"
					android:layout_column="0"
					android:layout_margin="8dp"
					android:layout_row="0"
					android:drawablePadding="4dp"
					android:drawableTop="@drawable/ic_aasan_deactive_48dp"
					android:gravity="center"
					android:text="@string/aasan_anulom_vilom"
					android:textColor="@color/textColorSubHead"/>

				<TextView
					android:id="@+id/textView6"
					android:layout_width="@dimen/bottom_row_i_w"
					android:layout_height="wrap_content"
					android:layout_column="1"
					android:layout_margin="8dp"
					android:layout_row="0"
					android:drawablePadding="4dp"
					android:drawableTop="@drawable/ic_aasan_deactive_48dp"
					android:gravity="center"
					android:text="@string/aasan_bharamri"
					android:textColor="@color/textColorSubHead"/>

				<TextView
					android:id="@+id/textView7"
					android:layout_width="@dimen/bottom_row_i_w"
					android:layout_height="wrap_content"
					android:layout_column="2"
					android:layout_margin="8dp"
					android:layout_row="0"
					android:drawablePadding="4dp"
					android:drawableTop="@drawable/ic_aasan_deactive_48dp"
					android:gravity="center"
					android:text="@string/aasan_udgeeth"
					android:textColor="@color/textColorSubHead"/>

			</GridLayout>

		</LinearLayout>

		<TextView
			android:id="@+id/time_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="24dp"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/textColorSubHead"
			android:textSize="40sp" tools:text="00:00 mins"/>

		<ImageButton
			android:id="@+id/start_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="24dp"
			android:background="@android:color/transparent"
			android:src="@drawable/ic_btn_start"/>

		<include layout="@layout/loading"/>

		<include layout="@layout/reload"/>

	</LinearLayout>

</RelativeLayout>
